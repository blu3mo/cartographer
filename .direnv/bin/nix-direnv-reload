#!/usr/bin/env bash
set -e
if [[ ! -d "/Users/yui/Developer/plural-reality/cartographer" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/Users/yui/Developer/plural-reality/cartographer")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/Users/yui/Developer/plural-reality/cartographer" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/Users/yui/Developer/plural-reality/cartographer/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/Users/yui/Developer/plural-reality/cartographer/.envrc" "/Users/yui/Developer/plural-reality/cartographer/.direnv"/*.rc
